<MainScreen@Screen>:
    name: "SalesPage"

    MDNavigationLayout:
        ScreenManager:
            id: nav_screen_manager

            Screen:
                name: "sales_home"
                PrincipalScreen:
                    md_bg_color: 212/255,219/255,237/255,1
                    AppBar:
                    SalesPage:
                        id:salespage

        Gradient:
