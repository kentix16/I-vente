

<PrincipalScreen@MDBoxLayout>
    orientation: "vertical"
    padding: dp(20)  # marge autour des enfants
    spacing: dp(10)  # espace entre enfants
<Gradient@MDNavigationDrawer>
    radius: [20, 20, 20, 20]
    size_hint_x: 0.20
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: "images/bluebg.jpg"
            pos: self.pos
            size: self.size
    md_bg_color: 0, 0, 0, 0  # Rendre le drawer transparent
    elevation: 0  # Supprimer l'élévation qui peut causer des bordures


    MDNavigationDrawerMenu:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: "images/bluebg.jpg"
                pos: self.pos
                size: self.size
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 0, 0, 0, 0


        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            spacing: dp(8)
            padding: [0, dp(10), 0, dp(20)]

            FitImage:
                source: "assets/logo.png"
                size_hint: None, None
                size: dp(50), dp(50)
                pos_hint: {"center_x": .5}
                radius: [dp(25)]

            DefaultLabel:
                text: "Mail Pro"
                font_style: "Display"
                role: "small"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                bold: True
                adaptive_height: True

        MDNavigationDrawerDivider:
            color: [1, 1, 1, 0.3]

        MDNavigationDrawerLabel:
            text: "MENU PRINCIPAL"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0.6

        MDNavigationDrawerItem:
            selected_color: [0, 0, 0, 0.2]
            ripple_color: [0, 0, 0, 0.2]
            md_bg_color:0,0,0,0
            on_release: print(app.manager)

            MDNavigationDrawerItemLeadingIcon:
                icon: "chart-areaspline"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDNavigationDrawerItemText:
                text: "statistique du jour"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
        MDNavigationDrawerItem:
            selected_color: [0, 0, 0, 0.2]
            ripple_color: [0, 0, 0, 0.2]
            md_bg_color:0,0,0,0
            on_release:app.manager.push("WalletPage")


            MDNavigationDrawerItemLeadingIcon:
